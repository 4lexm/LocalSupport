<!DOCTYPE html>
<html>
<head>
  <title>Harrow Community Network</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>

<body>
<% flash.each do |name, msg| %>
<%= content_tag :div, msg, :class => "flash #{name}" %>
<% end %>

<%= render 'layouts/header' %>
<section id="main">
<div class="container">
  <% unless cookies_accepted? %>
      <div class="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Cookies policy</strong> This site uses cookies. <br />
        <%= link_to 'Allow cookies', cookies_allow_path, :method=>'POST', :id=>'accept_cookies', :class=>'btn btn-primary' %>
        <%= link_to 'Deny cookies', cookies_deny_path, :method=>'POST', :id=>'deny_cookies', :class=>'btn btn-danger' %>
      </div>
  <% else %>

  <% end %>
<div class="row">
  <div class="span6">
    <%= yield :map %>
  </div>
  <div class="span6">
    <%= yield %>
  </div>
</div>

<br>
<br>
<div class="row">
  <div class="span4">
    <%= render 'layouts/footer' %>
  </div>
  <div class="span4">
    <%= render 'layouts/footer2' %>
  </div>
  <div class="span4">
    <%= render 'layouts/footer3' %>
  </div>
</div>
</div>
</section>
<!--this is where the gmaps scripts are added-->
<%= yield :scripts %>
</body>
</html>
