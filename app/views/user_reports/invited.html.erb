<table class="table table-hover sortable">
  <thead>
  <tr>
    <th>Organization</th>
    <th>Email</th>
    <th>Date Invited</th>
    <th style="text-align: center;"></th>
  </tr>
  </thead>
  <tbody>
  <% @invitations.each do |invitation| %>
      <% organization, user = invitation[:organization], invitation[:user] %>
      <tr id="<%= organization.id %>">
        <td><%= link_to organization.name, organization_path(organization) %></td>
        <td><%= user.email %></td>
        <td><%= user.invitation_sent_at %></td>
        <td class="response" style="text-align: center;">
          <input type="checkbox" data-id="<%= organization.id %>" data-email="<%= organization.email %>"/>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>